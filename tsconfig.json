{
  "extends": "@agritask/frontend-configs/tsconfig",
  "include": ["src/**/*", ".storybook/**/*", "test/e2e/**/*.ts", "demo_src/demo.ts"],
  "exclude": ["node_modules", "**/*.spec.ts", "**/*.test.ts"],
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      /* A series of entries which re-map imports to lookup locations relative to the 'baseUrl'. */
      "@/*": ["src/js/*"],
      "@style": ["src/style/*"],
      "@stories/*": [".storybook/*"],
      "react": ["stub/types__react"]
    }
  }
}
